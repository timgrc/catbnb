<div class="container">
  <h3>Houses list</h3>
  <% unless @location.nil? %>
    <h4>Recherche par ville : <%= @location %></h4>
  <% end %>
  <div class="row">
    <% @houses.each do |house| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: url('<%= path_to_image "background.jpg" %>');">
          <div class="card-category"><%= house.name %></div>
          <div class="card-description">
            <h2><%= house.name %></h2>
            <p><%= house.address %></p>
          </div>
          <%= image_tag "logo.png", class:"card-user avatar avatar-large" %>
          <%= link_to "#", house_path(house), class: "card-link" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div id="map" style="width: 100%; height: 600px;"></div>
    <% content_for(:after_js) do %>
      <script>
        $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
            }
          });
        });
      </script>
    <% end %>
  </div>
</div>
